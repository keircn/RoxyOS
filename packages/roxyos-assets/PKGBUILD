# Maintainer: Keiran <keircn@proton.me>

pkgname=roxyos-assets
pkgver=1.0.0
pkgrel=1
pkgdesc="Roxy Migurdia themed visual assets (wallpapers, themes, icons)"
arch=('any')
url="https://github.com/keircn/RoxyOS"
license=('MIT')
options=('!strip')

package() {
    mkdir -p "${pkgdir}/usr/share/roxyos/assets/wallpapers"
    mkdir -p "${pkgdir}/usr/share/roxyos/assets/themes"
    mkdir -p "${pkgdir}/usr/share/roxyos/assets/icons"
    
    touch "${pkgdir}/usr/share/roxyos/assets/wallpapers/.gitkeep"
    touch "${pkgdir}/usr/share/roxyos/assets/themes/.gitkeep"
    touch "${pkgdir}/usr/share/roxyos/assets/icons/.gitkeep"
}
